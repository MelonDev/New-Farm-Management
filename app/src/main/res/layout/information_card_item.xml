<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/information_card_item_layout_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <!--android:layout_width="@dimen/noti_card_width" -->
        <!--android:layout_width="match_parent"-->


        <androidx.cardview.widget.CardView
            android:id="@+id/information_card_item_layout_main_card"
            android:layout_width="@dimen/noti_card_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="false"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorSubBackground"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/information_card_item_layout_main_card_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:clickable="false"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/information_card_item_layout_main_card_image_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorWhite"
                        android:src="@drawable/ic_chicken_icon"
                        android:tint="@color/colorSubBackground" />

                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/circle_option"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_more"
                    android:tint="@color/colorOpposite" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="82dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="70dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/information_card_item_layout_main_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sukhumvit_bold"
                        android:singleLine="true"
                        android:text="หัวข้อ"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/information_card_item_layout_main_card_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:fontFamily="@font/sukhumvit_light"
                        android:singleLine="true"
                        android:text="รหัสไอดีรายการ"
                        android:textColor="@color/colorText"
                        android:textSize="16dp" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="16dp">

                <!-- Information Card -->
                <LinearLayout
                    android:id="@+id/information_card_item_layout_main_card_information_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sukhumvit_bold"
                            android:singleLine="true"
                            android:text="@string/data_admission"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/information_card_item_layout_main_card_information_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/sukhumvit_light"
                            android:singleLine="true"
                            android:text="1 มกราคม 2500"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sukhumvit_bold"
                            android:singleLine="true"
                            android:text="@string/current_chicken_age"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/information_card_item_layout_main_card_information_age_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/sukhumvit_light"
                            android:singleLine="true"
                            android:text="0 วัน"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sukhumvit_bold"
                            android:singleLine="true"
                            android:text="@string/farming_objective"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/information_card_item_layout_main_card_information_objective_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/sukhumvit_light"
                            android:singleLine="true"
                            android:text="ไม่ทราบ"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>
